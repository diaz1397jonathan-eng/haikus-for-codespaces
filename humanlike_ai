humanlike_ai/
├── agent.py
├── llm_adapter.py
├── memory.py
├── planner.py
├── run_agent.py
├── requirements.txt
├── Dockerfile
└── docker-compose.yml

# Dockerfile
FROM python:3.11-slim

# Set workdir
WORKDIR /app

# Copy files
COPY requirements.txt ./
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential git && rm -rf /var/lib/apt/lists/*

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy source code
COPY . .

# Default environment variable (override at runtime)
ENV OPENAI_API_KEY=changeme

# Run the agent in interactive mode
CMD ["python", "run_agent.py"]

version: "3.8"
services:
  humanlike-ai:
    build: .
    container_name: humanlike_ai
    environment:
      - OPENAI_API_KEY=${OPENAI_API_KEY}
    stdin_open: true     # keep stdin open (interactive)
    tty: true            # enable terminal interaction
    restart: "no"